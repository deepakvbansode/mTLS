{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "mTLS Krackend",
  "extra_config": {
    "telemetry/logging": {
      "level": "ERROR",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default",
      "syslog_facility": "local3"
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": [
    {
      "endpoint": "/v1/movies",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/movies/all.json",
          "method": "GET",
          "host": ["http://fake_api"]
        }
      ]
    },
    {
      "endpoint": "/v1/upcoming-movies",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {
        "github.com/devopsfaith/krakend-mtls": {
          "enable_mtls": true,
          "public_key": "/etc/krakend/certificates/cert.pem",
          "private_key": "/etc/krakend/certificates/key.pem",
          "ca_certs": ["/etc/krakend/certificates/rootCA.pem"]
        }
      },
      "backend": [
        {
          "url_pattern": "/movies/upcoming.json",
          "method": "GET",
          "host": ["http://fake_api"]
        }
      ]
    }
  ]
}
